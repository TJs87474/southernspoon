rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read and write their own data
      allow read, write: if isOwner(userId);
    }
    
    // Events collection
    match /events/{eventId} {
      // All authenticated users can read events
      allow read: if isAuthenticated();
      
      // Only authenticated users can create/update/delete events
      // In production, you might want to restrict this to admin users only
      allow create, update, delete: if isAuthenticated();
    }
    
    // User event interactions collection
    match /userEventInteractions/{interactionId} {
      // Users can only read their own interactions
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Users can only create interactions for themselves
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Users can update/delete their own interactions
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Saved events collection
    match /savedEvents/{savedEventId} {
      // Users can only read their own saved events
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Users can only create saved events for themselves
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Users can update/delete their own saved events
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
  }
}
